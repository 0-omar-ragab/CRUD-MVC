@model ResetPasswordViewModel
@{
	ViewData["Title"] = "ResetPassword";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">

		<div asp-validation-summary="All" class="text-danger"></div>
		<form asp-action="ResetPassword" method="post">
			@*<input type="hidden" asp-for="Email" />
			<input type="hidden" asp-for="Token" />*@

			<input class="text" asp-for="NewPassword" placeholder="Enter The New Password" required="">
			<span asp-validation-for="NewPassword" class="text-danger"></span>
			<br />
			<input class="text" asp-for="NewConfirmPassword" placeholder="Enter The Confirm Password" required="">
			<span asp-validation-for="NewConfirmPassword" class="text-danger"></span>
			<br />

			<input type="submit" value=" Reset Password">
		</form>

	</div>
</div>
@section ValidationScripts
{
	<partial name="_ValidationScriptsPartial" />
}